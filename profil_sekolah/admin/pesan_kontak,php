<?php
session_start();
if (!isset($_SESSION['login'])) {
  header("Location: login.php");
  exit;
}
include '../config/koneksi.php';

$data = mysqli_query($conn, "SELECT * FROM kontak ORDER BY tanggal DESC");

while ($d = mysqli_fetch_array($data)) {
  echo "<b>Nama:</b> {$d['nama']}<br>";
  echo "<b>Email:</b> {$d['email']}<br>";
  echo "<b>Pesan:</b><br>{$d['pesan']}<br>";
  echo "<small>Dikirim pada: {$d['tanggal']}</small><hr>";
}
?>